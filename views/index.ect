<html>
    <head>
        <meta charset="utf-8">
        <link href="default.css" rel="stylesheet" type="text/css">
        <title>Home</title>
        <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
    <% if @wuser? : %> //save côkie
        function setCookie(cname, cvalue) {
            document.cookie = cname + "=" + cvalue + ";";
        }
        $(document).ready(function() {
            var email = "<%-@wuser %>";
            var pass = "<%-@wpass %>";
            setCookie("cemail", email);
            setCookie("cpass", pass);
            window.location.href="/";
        });
    <% else : %>  //check cookie
        function getCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for(var i = 0; i <ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0)==' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                    return c.substring(name.length,c.length);
                }
            }
            return "";
        }

        function checkCookie() {
            var username=getCookie("cemail");
            var pass=getCookie("cpass");
            if (username!="" && pass!="") {
                return true;
            } else {
               return false;
            }
        }
        if (checkCookie() == false) {
            window.location.href="/login";
        }
    <% end %>
    </script>
    </head>
    <body>
       <div class"divM">
           <div class="g1">
               <div class="c00">
                   <div class="mes"><p>Messenger</p></div>
               </div>
               <div>
                    <div>
                        <script type="text/javascript">
                            function FindFriend(elm) {
                                var username=getCookie("cemail");
                                $.post("/addfriend", {email: username, txt: elm.value},  function(data) {
                                    if (data == 'done') {
                                        alert("Đã thêm bạn " + elm.value + " thành công");
                                    }
                                    else {
                                        alert("Tài khoản này không tồn tại");
                                    }
                                });
                                
                            }
                        </script>
                        <label class="lablec01"><input type="text" class="lablec01in"  placeholder="Tìm bạn" autocomplete="off" onkeydown="if (event.keyCode == 13) FindFriend(this)"></input></label>
                    </div>
                    <div>
                        
                    </div>
                </div>
           </div>
           <div class="g2">
               <div class="c01">
                   <div>TT tin nhắn</div>
               </div>
               <div>
                   
               </div>
           </div>
       </div>
    </body>
</html>

